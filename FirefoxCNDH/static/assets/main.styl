grisHeaderBackgound = #4D4D4D
grisLinkActive = #808080
naranjaActive = #F8923D
innerText = #9E9E9E
activeText = #ffffff
line = #E6E6E6
innerMenu = #000000

html
	height 100%
body
	font-size 16px
	height 100%
	bottom 0
a
	text-decoration none
#top
	background grisHeaderBackgound
	display block
	padding-top 1em
	font-size 1.2em
	border-bottom solid .6em grisLinkActive
header
	width 80%
	display inline-block
	h1
		display none
	img
		max-width 20%
		min-width 180px
		margin-left 1em
		vertical-align bottom
	nav
		display inline-block
		vertical-align bottom
		width 74%
		a
			color activeText
			border-bottom solid .8em transparent
			padding 0 1.5em .5em
			margin 0 4%
			display inline-block
			&:hover
				color innerText
			&.active
				border-color grisLinkActive
aside
	width 19%
	display inline-block
	vertical-align bottom
	text-align right
	a
		color innerText
		display inline-block
		margin 0 1em 1.4em 0
 		font-size 1em
		&:hover
			color activeText

section
	border-top solid .6em naranjaActive
	height 100%
	.col
		border 0
		border-right .2em solid line 
		display inline-block
		vertical-align top
		margin 0 -.12em
		padding 0
		height 100%
		min-height 100%
		h2
			font-size 1.4em
			font-weight normal
			text-align center
		ul
			list-style none
			display block
			padding 0
		li
			display block
		a
			border 0
			padding .5em 2em
			margin 0
			display block
			text-align left
			color innerMenu
			&:hover, &.active
				background naranjaActive
				color activeText
	.estado
		width 15%
	.municipio
		width 25%
	.oficina
		width 15%
	.mapa
		width calc( 45% - .6em )
		border 0